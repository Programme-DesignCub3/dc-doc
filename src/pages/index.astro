---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Search from "astro-pagefind/components/Search";

import { getCollection } from "astro:content";
const docs = await getCollection("docs");
---

<Layout title="Internal Developer Hub">
  <main class="mx-auto px-4 py-8 max-w-7xl text-white">
    <div class="text-center mb-12">
      <h1 class="text-5xl font-bold mb-4 motion-preset-focus">
        Developer <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-primary via-primary-light to-white"
          >Hub</span
        >
      </h1>
      <p class="text-xl text-primary-light">
        Your central resource for documentation, guides, and best practices
      </p>
    </div>

    <div class="flex justify-center mb-12">
      <Search
        id="search"
        className="pagefind-ui"
        uiOptions={{ showImages: false }}
      />
    </div>

    <div class="mb-12">
      <h2 class="text-2xl font-semibold text-primary-light mb-6">
        Quick Start
      </h2>
      <ul class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <Card
          href="/dc-doc/onboarding"
          title="New Developer Onboarding"
          body="Step-by-step guide to get you started with our development environment and processes."
        />
        <Card
          href="/dc-doc/tech-stack"
          title="Tech Stack Overview"
          body="Explore our technology stack, tools, and development guidelines."
        />
        <Card
          href="/dc-doc/workflows"
          title="Development Workflows"
          body="Learn about our git workflow, CI/CD pipelines, and deployment processes."
        />
        <Card
          href="/dc-doc/best-practices"
          title="Best Practices"
          body="Coding standards, architecture patterns, and development best practices."
        />
      </ul>
    </div>

    <div class="mb-12">
      <h2 class="text-2xl font-semibold text-primary-light mb-6">
        Essential Resources
      </h2>
      <ul class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <Card
          href="/dc-doc/api-docs"
          title="API Documentation"
          body="Comprehensive API references and integration guides."
        />
        <Card
          href="/dc-doc/components"
          title="Component Library"
          body="Explore our shared components and design system."
        />
        <Card
          href="/dc-doc/testing"
          title="Testing Guidelines"
          body="Learn about our testing strategies and quality assurance processes."
        />
        <Card
          href="/dc-doc/troubleshooting"
          title="Troubleshooting Guide"
          body="Common issues and their solutions to speed up development."
        />
      </ul>
    </div>
  </main>
</Layout>
