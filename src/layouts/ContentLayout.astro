---
import Layout from './Layout.astro';
import TableOfContents from '../components/TableOfContents.astro';

interface Props {
  title: string;
  description: string;
  toc: Array<{ id: string; text: string; level: number }>;
}

const { title, description, toc } = Astro.props;
---

<Layout title={title}>
  <div class="mx-auto px-4 py-8 max-w-7xl">
    <div class="lg:grid lg:grid-cols-[1fr_250px] lg:gap-8">
      <main class="prose prose-invert max-w-none lg:pr-8">
        <h1 class="text-4xl font-bold mb-4 text-white">{title}</h1>
        <p class="text-xl text-primary-light mb-8">{description}</p>
        <slot />
      </main>
      
      <aside class="hidden lg:block">
        <TableOfContents toc={toc} />
      </aside>
    </div>
  </div>
</Layout>