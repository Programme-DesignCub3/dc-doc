---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="list-none">
	<a 
		href={href}
		class="block p-6 bg-slate-800 rounded-xl border border-slate-700/50 hover:border-primary-light/50 transition-all duration-300 hover:-translate-y-1 group"
	>
		<h2 class="text-xl font-semibold text-white flex justify-between items-center group-hover:text-primary-light">
			{title}
			<span class="text-primary-light">&rarr;</span>
		</h2>
		<p class="mt-3 text-slate-300 text-base">
			{body}
		</p>
	</a>
</li>